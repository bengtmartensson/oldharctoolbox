  <task name="morning-screen-up">
    <time>
      <absolute-time hour="6" minute="58"/>
    </time>
    <commandline>screen up</commandline>
  </task>

  <task name="sunrise-blinds-up">
    <time>
      <last-of>
	<absolute-time  hour="7" minute="0"/>
	<sunrise latitude="48.13" longitude="11.5" degrees="-3"/>
      </last-of>
    </time>
    <!--commandline>sunrise</commandline-->
    <commandline>large_blind up</commandline>
    <commandline>small_blind up</commandline>
    <commandline>balcony_blind up</commandline>
    <commandline>kitchen_blind up</commandline>
    <commandline>large_blind up</commandline>
    <commandline>small_blind up</commandline>
    <commandline>balcony_blind up</commandline>
    <commandline>kitchen_blind up</commandline>
  </task>

  <task name="sunset-blinds-down">
    <time>
      <sunset latitude="48.13" longitude="11.5" degrees="-3"/>
    </time>
    <!--commandline>sunset</commandline-->
    <commandline>large_blind down</commandline>
    <commandline>small_blind down</commandline>
    <commandline>balcony_blind down</commandline>
    <commandline>kitchen_blind down</commandline>
    <commandline>bedroom_blind down</commandline>
    <commandline>large_blind down</commandline>
    <commandline>small_blind down</commandline>
    <commandline>balcony_blind down</commandline>
    <commandline>kitchen_blind down</commandline>
    <commandline>bedroom_blind down</commandline>
  </task>

  <task name="bedroom-blind-up">
    <time>
      <weekdays>
	<weekday day="Mon">
	  <absolute-time hour="7" minute="45"/>
	</weekday>
	<weekday day="Tue">
	  <absolute-time hour="7" minute="45"/>
	</weekday>
	<weekday day="Wed">
	  <absolute-time hour="7" minute="45"/>
	</weekday>
	<weekday day="Thu">
	  <absolute-time hour="7" minute="45"/>
	</weekday>
	<weekday day="Fri">
	  <absolute-time hour="7" minute="45"/>
	</weekday>
	<weekday day="Sat">
	  <absolute-time hour="9" minute="0"/>
	</weekday>
	<weekday day="Sun">
	  <absolute-time hour="9" minute="0"/>
	</weekday>
      </weekdays>
    </time>
    <commandline>bedroom_blind up</commandline>
  </task>
