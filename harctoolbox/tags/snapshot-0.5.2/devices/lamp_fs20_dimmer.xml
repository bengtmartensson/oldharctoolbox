<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE devices PUBLIC "-//bengt-martensson.de//devices//en"
 "../dtds/devices.dtd">
<devices>
  <device id="lamp_fs20_dimmer" name="Generic electrical consumer with FS20 dimmer" model="generic" type="ha">
    <commandset type="on_off">
      <command cmdref="power_on"/>
      <command cmdref="power_off"/>
      <command cmdref="power_toggle"/>
      <command cmdref="dim_up"/>
      <command cmdref="dim_down"/>
      <command cmdref="get_status"/>
      <command cmdref="set_power">
        <argument name="value" semantic="Power value in percent"/>
      </command>
      <command cmdref="dim_off_time">
        <argument name="time"/>
      </command>
      <command cmdref="dim_value_time">
        <argument name="value"/>
        <argument name="time"/>
      </command>
      <command cmdref="dim_max_time">
        <argument name="time"/>
      </command>
    </commandset>
  </device>
</devices>
