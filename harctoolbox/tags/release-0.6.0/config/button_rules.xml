<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE button_rules SYSTEM "../dtds/button_rules.dtd">
<button_rules>
<!-- reserve-button says that the button may only be assigned to the function -->
<!-- mentionen in the attribute function; if empty then to no function -->
  <reserve-button button="magic" unshifted-only="no"/>
  <reserve-button button="vol+"  unshifted-only="yes" function="volume_up"/>
  <reserve-button button="vol-"  unshifted-only="yes" function="volume_down"/>

  <names button="play">
    <add-name name="play_pause"/>
    <add-name name="slow"/>
    <add-name name="slow_forward"/>
  </names>
  <names button="pause" allow_buttonname="no">
    <add-name name="pause_toggle"/>
    <add-name name="pause_on"/>
    <add-name name="pause_off"/>
    <add-name name="play_pause"/>
    <add-name name="still_advance"/>
    <add-name name="freeze_toggle"/>
  </names>
  <names button="rew">
    <add-name name="rewind"/>
    <add-name name="slow_reverse"/>
    <add-name name="reverse"/>
  </names>
  <names button="guide" allow_buttonname="no">
    <add-name name="info"/>
    <add-name name="display"/>
  </names>
  <names button="mute">
    <add-name name="mute_toggle"/>
  </names>
  <names button="Vol+">
    <add-name name="volume_up"/>
  </names>
  <names button="vol-">
    <add-name name="volume_down"/>
  </names>
  <names button="menu" devicetype="dvd|misc_audio">
    <add-name name="dvd_menu"/>
    <add-name name="title"/>
  </names>
  <names button="menu">
    <add-name name="setup"/>
  </names>
  <names button="ch+" devicetype="dvd|cd">
    <add-name name="next"/>
  </names>
  <names button="ch+">
    <add-name name="channel_up"/>
    <add-name name="page_up"/>
  </names>
  <names button="ch+" devicetype="misc_audio">
    <add-name name="page_up"/>
  </names>
  <names button="ch-" devicetype="dvd">
    <add-name name="previous"/>
  </names>
  <names button="ch-">
    <add-name name="channel_down"/>
    <add-name name="page_down"/>
  </names>
  <names button="ch-" devicetype="misc_audio">
    <add-name name="page_down"/>
  </names>
  <names button="Brightness+">
    <add-name name="brightness_up"/>
  </names>
  <names button="Brightness-">
    <add-name name="brightness_down"/>
  </names>


  <reserve-button button="mute" unshifted-only="yes" function="mute_toggle"/>

  <names button="power" match-required="yes" allow_buttonname="no">
    <add-name name="power_toggle"/>
    <add-name name="power_on"/>
    <add-name name="power_off"/>
    <add-name name="standby_toggle"/>
    <add-name name="suspend"/>
  </names>
  <names button="rec" allow_buttonname="no">
    <add-name name="record_toggle"/>
    <add-name name="record_on"/>
    <add-name name="record_off"/>
  </names>
  <names button="rec">
    <add-name name="open_close"/>
  </names>
  <names button="-/--">
    <add-name name="two_digit"/>
    <add-name name="plus10"/>
    <add-name name="last_channel"/>
    <add-name name="caps_num"/>
  </names>
  <names button="exit">
    <add-name name="home"/>
    <add-name name="return"/>
    <add-name name="menu_off"/>
    <add-name name="cancel"/>
  </names>
  <names button="a" devicetype="dvd|misc_audio">
