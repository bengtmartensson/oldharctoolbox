<!ELEMENT button_remote (general, buttons) >
<!ATTLIST button_remote
          id NMTOKEN #REQUIRED
          name CDATA #IMPLIED
          description CDATA #IMPLIED
>

<!ELEMENT general (notes?,states?,rdffile*) >

<!ELEMENT states (state+) >

<!ELEMENT state EMPTY >
<!ATTLIST state
          name NMTOKEN #REQUIRED
>

<!ELEMENT rdffile EMPTY >
<!ATTLIST rdffile
          file CDATA #REQUIRED
>

<!ELEMENT notes (#PCDATA) >

<!ELEMENT buttons (button)+ >

<!ELEMENT button (alias*) >
<!ATTLIST button
	name CDATA #REQUIRED
	keycode NMTOKEN #REQUIRED
        notes CDATA #IMPLIED
>

<!ELEMENT alias EMPTY>
<!ATTLIST alias
          name CDATA #REQUIRED
          notes CDATA #IMPLIED
>
