<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE irprotocol PUBLIC "-//bengt-martensson.de//irprotocols//en"
 "../dtds/irprotocols.dtd">
<!-- 
Reference: http://www.sbprojects.com/knowledge/ir/nrc17.htm,
 see also http://www.hifi-remote.com/forums/viewtopic.php?t=1044
 -->
<irprotocol name="nrc17" id="nrc17">
  <jp1data>
    <protocol number="00 xx" name="F12"/>
    <tohex function="reverse-invert" bits="8"/>
  </jp1data>
  <parameters>
    <parameter id="deviceno" bits="3"/>
    <parameter id="subdevice" bits="1">
      <default>
	<constant value="1"/>
      </default>
    </parameter>
    <parameter id="cmdno" bits="8"/>
  </parameters>
  <frequency value="38000"/>
  <irpnotation-old>
Device=5.0
Function=0..255
Protocol=F12
Frequency=38000
Time Base=425
Zero=1,-3
One=3,-1
Form=D:3,S:1,F:8,-80,D:3,S:1,F:8,-80
  </irpnotation-old>
  <irpnotation-new>
protocol={38k,410}&lt;1,-3|3,-1>(D:3,C:1,F:8,^129)+
static=c,0
user=d,Device
user=f,Function
  </irpnotation-new>
  <body>
    <timings>
      <timing id="t1" cycles="16"/>
      <timing id="t3" cycles="48"/>
      <timing id="t129" cycles="2064"/>
    </timings>
    <pairs>
      <pair id="p0">
        <one timing="t1"/>
        <zero timing="t3"/>
      </pair>
      <pair id="p1">
        <one timing="t3"/>
        <zero timing="t1"/>
      </pair>
    </pairs>
    <intro/>
    <repeat>
      <coded_number direction="lsb" zero="p0" one="p1" bits="3">
	<parameterref parameter="deviceno"/>
      </coded_number>
      <coded_number direction="lsb" zero="p0" one="p1" bits="1">
	<parameterref parameter="subdevice"/>
      </coded_number>
      <coded_number direction="lsb" zero="p0" one="p1" bits="8">
	<parameterref parameter="cmdno"/>
      </coded_number>
      <zeropadding timing="t129"/>
    </repeat>
  </body>
</irprotocol>
